{
  "dashboard": {
    "title": "Provider Metrics Dashboard",
    "description": "Story 3.10: Provider Metrics Tracking - Dashboard specification for Epic 6-7 implementation",
    "tags": ["provider", "metrics", "slo"],
    "timezone": "browser",
    "panels": [
      {
        "id": 1,
        "title": "Provider Availability",
        "type": "gauge",
        "targets": [
          {
            "expr": "sum(rate(provider_calls_total{status=\"success\"}[5m])) by (provider) / sum(rate(provider_calls_total[5m])) by (provider) * 100",
            "legendFormat": "{{ provider }}"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "percent",
            "min": 0,
            "max": 100,
            "thresholds": {
              "mode": "absolute",
              "steps": [
                { "value": 0, "color": "red" },
                { "value": 95, "color": "yellow" },
                { "value": 99, "color": "green" }
              ]
            }
          }
        }
      },
      {
        "id": 2,
        "title": "Provider Latency P99",
        "type": "timeseries",
        "targets": [
          {
            "expr": "histogram_quantile(0.99, sum(rate(provider_latency_bucket[5m])) by (provider, le))",
            "legendFormat": "{{ provider }} P99"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "s",
            "custom": {
              "lineWidth": 2,
              "fillOpacity": 10
            }
          }
        }
      },
      {
        "id": 3,
        "title": "Call Volume by Provider",
        "type": "timeseries",
        "targets": [
          {
            "expr": "sum(rate(provider_calls_total[5m])) by (provider)",
            "legendFormat": "{{ provider }}"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "reqps",
            "custom": {
              "fillOpacity": 50,
              "stacking": {
                "mode": "normal"
              }
            }
          }
        }
      },
      {
        "id": 4,
        "title": "Error Rate by Provider",
        "type": "timeseries",
        "targets": [
          {
            "expr": "provider_error_rate * 100",
            "legendFormat": "{{ provider }}"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "percent",
            "custom": {
              "lineWidth": 2,
              "thresholds": {
                "mode": "absolute",
                "steps": [
                  { "value": 0, "color": "green" },
                  { "value": 5, "color": "red" }
                ]
              }
            }
          }
        }
      },
      {
        "id": 5,
        "title": "Timeout Rate",
        "type": "stat",
        "targets": [
          {
            "expr": "sum(rate(provider_timeout_total[5m])) / sum(rate(provider_calls_total[5m])) * 100",
            "legendFormat": "Timeout Rate"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "percent",
            "thresholds": {
              "mode": "absolute",
              "steps": [
                { "value": 0, "color": "green" },
                { "value": 5, "color": "yellow" },
                { "value": 10, "color": "red" }
              ]
            }
          }
        }
      }
    ],
    "refresh": "30s",
    "time": {
      "from": "now-1h",
      "to": "now"
    }
  },
  "implementation_notes": "This is a specification for Epic 6-7. Full Grafana JSON implementation will be done when Admin Portal is built."
}

