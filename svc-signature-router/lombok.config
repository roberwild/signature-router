# Lombok Configuration
# Story 1.5: Domain Models

# Add @Generated annotation to Lombok-generated code (excludes from code coverage)
lombok.addLombokGeneratedAnnotation = true

# Disable adding constructor properties (not needed for domain models)
lombok.anyConstructor.addConstructorProperties = false

# Field defaults: all fields private by default
lombok.fieldDefaults.defaultPrivate = true

# Note: defaultFinal is NOT enabled globally because aggregates/entities 
# need mutable fields for state transitions (status, signedAt, etc.)

