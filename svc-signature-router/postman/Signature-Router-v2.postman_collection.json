						},
						"url": {
							"raw": "{{base_url}}/api/v1/signatures",
							"host": ["{{base_url}}"],
							"path": ["api", "v1", "signatures"]
						},
						"description": "Crea una solicitud de firma con token de usuario est√°ndar"
					}
				},
				{
					"name": "Get Signature Request by ID",
					"event": [
						{
							"listen": "test",
							"script": {
								"exec": [
									"if (pm.response.code === 200) {",
									"    const response = pm.response.json();",
									"    ",
									"    if (response.activeChallenge) {",
									"        const challenge = response.activeChallenge;",
									"        pm.environment.set('challenge_id', challenge.id);",
									"        ",
									"        console.log('‚úÖ Challenge ID guardado:', challenge.id);",
									"        console.log('   Channel:', challenge.channelType);",
									"        console.log('   Status:', challenge.status);",
									"        console.log('');",
									"        console.log('üìã Para completar la firma, ejecuta en PowerShell:');",
									"        console.log(`docker exec -it signature-router-postgres psql -U siguser -d signature_router -c \"SELECT challenge_code FROM signature_challenge WHERE id = '${challenge.id}';\"`);",
									"        console.log('');",
									"        console.log('Luego actualiza la variable challenge_code en el entorno de Postman');",
									"    } else {",
									"        console.log('‚ö†Ô∏è No hay challenge activo en esta solicitud');",
									"    }",
									"}"
								],
								"type": "text/javascript"
							}
						}
					],
					"request": {
						"method": "GET",
						"header": [
							{
								"key": "Authorization",
								"value": "Bearer {{admin_token}}"
							}
						],
						"url": {
							"raw": "{{base_url}}/api/v1/signatures/{{signature_request_id}}",
							"host": ["{{base_url}}"],
							"path": ["api", "v1", "signatures", "{{signature_request_id}}"]
						},
						"description": "Obtiene el detalle de una solicitud por ID y extrae el challenge_id"
					}
				},
				{
					"name": "Verify Challenge",
					"event": [
						{
							"listen": "test",
							"script": {
								"exec": [
									"if (pm.response.code === 200) {",
									"    const response = pm.response.json();",
									"    console.log('‚úÖ Challenge verificado exitosamente');",
									"    console.log('   Status:', response.status);",
									"    console.log('   Signature ID:', response.id);",
									"}"
								],
								"type": "text/javascript"
							}
						}
					],
					"request": {
						"method": "PATCH",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							},
							{
								"key": "Authorization",
								"value": "Bearer {{admin_token}}"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n  \"challengeId\": \"{{challenge_id}}\",\n  \"code\": \"{{challenge_code}}\"\n}"
						},
						"url": {
							"raw": "{{base_url}}/api/v1/signatures/{{signature_request_id}}/complete",
							"host": ["{{base_url}}"],
							"path": ["api", "v1", "signatures", "{{signature_request_id}}", "complete"]
						},
						"description": "Verifica el c√≥digo del challenge y completa la firma"
					}
				}
			]
		},
