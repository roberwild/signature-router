			"name": "2. Signature Requests",
			"item": [
				{
					"name": "Create Signature Request - SMS (Admin)",
					"event": [
						{
							"listen": "test",
							"script": {
								"exec": [
									"if (pm.response.code === 201) {",
									"    const response = pm.response.json();",
									"    pm.environment.set('signature_request_id', response.id);",
									"    console.log('‚úÖ Request ID guardado:', response.id);",
									"    console.log('   Status:', response.status);",
									"    console.log('   Expires at:', response.expiresAt);",
									"}"
								],
								"type": "text/javascript"
							}
						}
					],
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							},
							{
								"key": "Authorization",
								"value": "Bearer {{admin_token}}"
							},
							{
								"key": "Idempotency-Key",
								"value": "{{$guid}}"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n  \"customerId\": \"CUST-{{$timestamp}}\",\n  \"phoneNumber\": \"+34612345678\",\n  \"transactionContext\": {\n    \"amount\": {\n      \"value\": 1500.00,\n      \"currency\": \"EUR\"\n    },\n    \"merchantId\": \"MERCHANT-{{$randomInt}}\",\n    \"orderId\": \"ORDER-{{$randomInt}}\",\n    \"description\": \"Transferencia a cuenta externa\"\n  }\n}"
						},
						"url": {
							"raw": "{{base_url}}/api/v1/signatures",
							"host": ["{{base_url}}"],
							"path": ["api", "v1", "signatures"]
						},
						"description": "Crea una solicitud de firma con token de admin"
					}
				},
